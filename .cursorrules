{
  "projectType": "web",
  "framework": "svelte",
  "additionalLanguages": ["typescript"],
  "rules": {
    "svelte": {
      "componentNaming": "PascalCase",
      "scriptStyle": "typescript",
      "styleType": "tailwind"
    },
    "typescript": {
      "strict": true,
      "moduleResolution": "node"
    },
    "tailwind": {
      "customColors": {
        "brand": {
          "red": "#EE434A",
          "turquoise": "#42C1C8",
          "navy": "#2A4D61",
          "darkBlue": "#1E3443"
        },
        "light": {
          "background": {
            "primary": "#FFFFFF",
            "secondary": "#FFF2F3",
            "tertiary": "#EDFEFF"
          },
          "text": {
            "primary": "#000000",
            "secondary": "#494848",
            "tertiary": "#A3A3A3"
          },
          "border": "rgba(0, 0, 0, 0.05)"
        },
        "dark": {
          "background": {
            "primary": "#1E3443",
            "secondary": "#2A4D61",
            "tertiary": "#000000"
          },
          "text": {
            "primary": "#FFFFFF",
            "secondary": "#E8EAED",
            "tertiary": "#A3A3A3"
          },
          "border": "rgba(255, 255, 255, 0.05)"
        }
      }
    },
    "formatting": {
      "indentSize": 2,
      "maxLineLength": 100,
      "quotes": "single"
    },
    "suggestions": {
      "enabled": true,
      "autoImports": true,
      "componentCompletion": true,
      "tailwindClassCompletion": true
    },
    "linting": {
      "eslint": true,
      "prettier": true,
      "typescript": true
    }
  },
  "folders": {
    "components": "src/lib/components",
    "routes": "src/routes",
    "stores": "src/lib/stores",
    "services": "src/lib/services",
    "types": "src/lib/types",
    "utils": "src/lib/utils",
    "assets": "static"
  }

} 