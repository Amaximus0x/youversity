rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;

      // Allow access to user's likes subcollection
      match /likes/{courseId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }

      // User's subcollections
      match /{collection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Usernames collection for username reservation
    match /usernames/{username} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null;
      allow update: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username == username;
    }

    // Courses collection
    match /courses/{courseId} {
      // Allow reading for all users
      allow read: if true;
      
      // Allow creation with validation
      allow create: if isAuthenticated() 
        && request.resource.data.keys().hasAll(['Final_Course_Title', 'createdBy'])
        && request.resource.data.createdBy == request.auth.uid;
      
      // Allow updates by course creator OR likes/views updates by any authenticated user
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.createdBy ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'views']) &&
          (request.resource.data.likes - resource.data.likes) <= 1 &&
          (request.resource.data.likes - resource.data.likes) >= -1
        )
      );
      
      // Allow deletion only by course creator
      allow delete: if isAuthenticated() 
        && request.auth.uid == resource.data.createdBy;
    }
    
    // Course ratings subcollection
    match /courses/{courseId}/ratings/{ratingId} {
      allow read: if true;  // Allow public read access to ratings
      allow write: if isAuthenticated() && request.auth.uid == ratingId;
    }
    
    // Course progress collection
    match /courseProgress/{progressId} {
      allow read, write: if request.auth != null && 
        progressId.matches(request.auth.uid + '_.*');
    }
    
    // User's courses subcollection
    match /users/{userId}/courses/{courseId} {
      allow read, write, delete: if isOwner(userId);
    }
    
    // Bookmarks collection
    match /bookmarks/{bookmarkId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        bookmarkId == request.auth.uid + '_' + request.resource.data.courseId;
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/bookmarks/$(bookmarkId)) &&
        get(/databases/$(database)/documents/bookmarks/$(bookmarkId)).data.userId == request.auth.uid;
      allow update: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    // User's bookmarks subcollection
    match /users/{userId}/bookmarks/{courseId} {
      allow read, write, delete: if isOwner(userId);
    }
    
    // Enrollments collection
    match /enrollments/{enrollmentId} {
      allow read: if isAuthenticated();
      allow write, delete: if isAuthenticated() && 
        (enrollmentId.matches(request.auth.uid + '_.*') || 
        resource.data.userId == request.auth.uid);
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId || 
        resource.data.type == 'SYSTEM_ANNOUNCEMENT'
      );
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid ||
        request.resource.data.type == 'SYSTEM_ANNOUNCEMENT' ||
        request.resource.data.type == 'GENERAL' ||
        request.resource.data.type == 'COURSE_LIKED' ||
        request.resource.data.type == 'COURSE_REVIEWED'
      );
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Deployment versions collection
    match /deploymentVersions/{versionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Add this rule inside the match /databases/{database}/documents block
    match /searchRecommendations/{docId} {
      allow read: if true;  // Allow public read access to search recommendations
      allow write: if false;  // Only allow writes through admin/server
    }

    // Search history collection
    match /searchHistory/{docId} {
      // Allow read if authenticated
      allow read: if request.auth != null;
      
      // Allow create if authenticated and userId matches
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.keys().hasAll(['query', 'userId', 'timestamp']) &&
        request.resource.data.query is string &&
        request.resource.data.userId is string &&
        request.resource.data.timestamp is timestamp;
      
      // Allow delete if authenticated and userId matches
      allow delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      
      // Allow list queries for user's searches only
      allow list: if request.auth != null;
    }

    // Saved Videos collection (renamed from videos)
    match /savedVideos/{videoId} {
      // Allow reading for authenticated users
      allow read: if isAuthenticated();
      
      // Allow creation with validation
      allow create: if isAuthenticated() 
        && request.resource.data.keys().hasAll(['title', 'userId'])
        && request.resource.data.userId == request.auth.uid;
      
      // Allow updates by video owner
      allow update: if isAuthenticated() && request.auth.uid == resource.data.userId;
      
      // Allow deletion only by video owner
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
  }
}