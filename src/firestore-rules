rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['displayName', 'photoURL', 'dateOfBirth', 'gender', 
                   'country', 'updatedAt', 'email', 'phoneNumber']);
    }

    // Usernames collection for username reservation
    match /usernames/{username} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                   request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
                   get(/databases/$(database)/documents/usernames/$(username)).data.userId == request.auth.uid;
    }

    // Public courses collection - Allow public read access
    match /courses/{courseId} {
      // Allow reading for all users (authenticated and unauthenticated)
      allow read: if true;
      
      // Allow creation with validation
      allow create: if isAuthenticated() 
        && request.resource.data.keys().hasAll(['Final_Course_Title', 'createdBy'])
        && request.resource.data.createdBy == request.auth.uid;
      
      // Allow updates by course creator OR likes update by any authenticated user
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.createdBy ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'views']) &&
          request.resource.data.likes >= 0 &&
          request.resource.data.likes <= resource.data.likes + 1
        )
      );
      
      // Allow deletion only by course creator
      allow delete: if isAuthenticated() 
        && request.auth.uid == resource.data.createdBy;
    }
    
    // Course ratings subcollection
    match /courses/{courseId}/ratings/{ratingId} {
      allow read: if true;  // Allow public read access to ratings
      allow write: if isAuthenticated() && request.auth.uid == ratingId;
    }
    
    // Course progress collection
    match /courseProgress/{progressId} {
      allow read, write: if request.auth != null && 
        progressId.matches(request.auth.uid + '_.*');
    }
    
    // User's private courses subcollection
    match /users/{userId}/courses/{courseId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Bookmarks collection
    match /bookmarks/{bookmarkId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        bookmarkId == request.auth.uid + '_' + request.resource.data.courseId;
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/bookmarks/$(bookmarkId)) &&
        get(/databases/$(database)/documents/bookmarks/$(bookmarkId)).data.userId == request.auth.uid;
      allow update: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }

    // User's bookmarks subcollection
    match /users/{userId}/bookmarks/{courseId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Enrollments collection
    match /enrollments/{enrollmentId} {
      allow read: if request.auth != null && 
        enrollmentId.matches(request.auth.uid + '_.*');
      allow create: if request.auth != null && 
        enrollmentId == request.auth.uid + '_' + request.resource.data.courseId;
      allow update: if request.auth != null && 
        enrollmentId.matches(request.auth.uid + '_.*') &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['lastAccessedAt', 'moduleProgress', 'completedModules', 
                   'quizResults']);
    }

    // Add rules for user's likes subcollection
    match /users/{userId}/likes/{courseId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}