rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['displayName', 'photoURL', 'dateOfBirth', 'gender', 
                   'country', 'updatedAt', 'email', 'phoneNumber']);
    }

    // Public courses collection
    match /courses/{courseId} {
      // Allow reading for all users
      allow read: if true;
      
      // Allow creation with validation
      allow create: if request.auth != null 
        && request.resource.data.keys().hasAll(['Final_Course_Title', 'createdBy'])
        && request.resource.data.createdBy == request.auth.uid;
      
      // Allow updates by course creator OR view count updates
      allow update: if request.auth != null && (
        // Course creator can update everything
        request.auth.uid == resource.data.createdBy ||
        // Any authenticated user can update likes and likedBy
        (
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['likes', 'likedBy']) &&
          (
            // Adding like
            (request.resource.data.likes == resource.data.likes + 1 &&
             request.resource.data.likedBy.hasAll(resource.data.likedBy) &&
             request.resource.data.likedBy.size() == resource.data.likedBy.size() + 1) ||
            // Removing like
            (request.resource.data.likes == resource.data.likes - 1 &&
             resource.data.likedBy.hasAll(request.resource.data.likedBy) &&
             request.resource.data.likedBy.size() == resource.data.likedBy.size() - 1)
          )
        ) ||
        // Allow view count updates
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']) &&
          request.resource.data.views == resource.data.views + 1
        )
      );
      
      // Allow deletion only by course creator
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
    }
    
    // Course progress collection
    match /courseProgress/{progressId} {
      allow read, write: if request.auth != null && 
        progressId.matches(request.auth.uid + '_.*');
    }
    
    // User's private courses subcollection
    match /users/{userId}/courses/{courseId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}