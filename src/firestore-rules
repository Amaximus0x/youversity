rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['displayName', 'photoURL', 'dateOfBirth', 'gender', 
                   'country', 'updatedAt', 'email', 'phoneNumber']);
    }

    // Public courses collection
    match /courses/{courseId} {
      // Allow reading for all users
      allow read, get: if true;
      
      // Allow creation with validation
      allow create: if request.auth != null 
        && request.resource.data.keys().hasAll(['Final_Course_Title', 'createdBy'])
        && request.resource.data.createdBy == request.auth.uid;
      
      // Allow updates only by course creator
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.createdBy
        && request.resource.data.keys().hasAll(['Final_Course_Title', 'createdBy']);
      
      // Allow deletion only by course creator
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
    }
    
    // Course progress collection
    match /courseProgress/{progressId} {
      allow read, write: if request.auth != null && 
        progressId.matches(request.auth.uid + '_.*');
    }
    
    // User's private courses subcollection
    match /users/{userId}/courses/{courseId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}